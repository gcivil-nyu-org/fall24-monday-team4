[flake8]
ignore = F403, F405
per-file-ignores =
    # Ignore unused imports in __init__.py files
    __init__.py: F401
    # Ignore unused imports in apps.py (for Django signals)
    */apps.py: F401
    # Add more file patterns if needed
    */signals.py: F401
max-line-length = 100
exclude =
    .git,
    __pycache__,
    env,
    venv,